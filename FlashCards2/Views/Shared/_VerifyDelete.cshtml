@model VerifyDeleteViewModel

<div id="verifyDelete" class="alert alert-danger" role="alert">
    <p class="font-weight-bold">Are you sure you want to delete this @Model.ItemType?</p>
    <a id="deleteYes"
       class="btn btn-danger"
       href="Delete">
        Yes
    </a>
    <button id="deleteNo" type="button" class="btn btn-success">No</button>
</div>

<script>
    $(document).ready(function () {
        $('#verifyDelete').hide();

        $('#deleteButton').on('click', toggleDelete);
        $('#deleteNo').on('click', toggleDelete);
    });

    function toggleDelete() {
        $('#verifyDelete').slideToggle('slow');
    }
</script>